@model IEnumerable<SGV_Booking.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingNotes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BanquetOption)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Restaurant)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookingTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingNotes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BanquetOption)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Restaurant.RestaurantId)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.BookingId">Details</a> |
            </td>
        </tr>
}
    </tbody>
</table>
