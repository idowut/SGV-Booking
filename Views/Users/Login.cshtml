<h2 style="text-align: center">Login</h2>


<form method="post" action="/Users/LoginDetails">
    <div class="row justify-content-center">
        <div class="col-3">
            <input type="text" name="emailLogin" class="form-control" placeholder="Enter Email" />
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-3">
            <input type="text" name="passwordLogin" class="form-control" placeholder ="Enter Password" />
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-auto">
            <button type="submit" class="form-control btn-primary">Login</button>
        </div>
    </div>
</form>