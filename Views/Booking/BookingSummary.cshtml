<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Booking Summary</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: lightblue;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .display-header {
            background-color: #333;
            color: #fff;
            padding: 15px;
            text-align: center;
            font-size: 24px;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .elem-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        input[type="number"],
        input[type="date"],
        select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
        }

        select {
            appearance: none;
            -webkit-appearance: none;
            -moz-appearance: none;
            background-position: right center;
        }

        button[type="submit"] {
            background-color: #333;
            color: #fff;
            border: none;
            padding: 10px 20px;
            font-size: 18px;
            cursor: pointer;
            border-radius: 5px;
        }

        #bookingTimeSelect {
            display: none;
        }

        #banquetOptions {
            display: none;
        }

            #banquetOptions .card {
                width: 100%;
                max-width: 300px;
                margin: 0 auto;
                margin-bottom: 20px;
            }

            #banquetOptions .card-title {
                font-size: 18px;
                font-weight: bold;
            }

            #banquetOptions .card-text {
                font-size: 14px;
            }

            #banquetOptions .btn {
                width: 100%;
                background-color: #333;
                color: #fff;
                border: none;
                font-size: 16px;
                border-radius: 5px;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="display-header">Booking Summary</h1>

        <div class="booking-info">
            <h2>Booking Details</h2>
            <p><strong>Number of Guests:</strong> <span id="guestCount"></span></p>
            <p><strong>Date:</strong> <span id="dateTime"></span></p>
            <p><strong>Time:</strong> <span id="bookingTime"></span></p>
            <p><strong>Selected Restaurant:</strong> <span id="selectedRestaurant"></span></p>
            <p><strong>Selected Banquet Option:</strong> <span id="selectedBanquet"></span></p>
        </div>

        <div class="summary-info">
            <h2>Guest Information</h2>
            <p><strong>First Name:</strong> <span id="firstName"></span></p>
            <p><strong>Last Name:</strong> <span id="lastName"></span></p>
            <p><strong>Email:</strong> <span id="email"></span></p>
            <p><strong>Phone Number:</strong> <span id="phoneNumber"></span></p>
            <p><strong>Dietary Requirements:</strong> <span id="dietaryRequirements"></span></p>
        </div>


        <form action="BookingConfirmation" method="GET">
            <button type="submit">Confirm Booking</button>
        </form>
    </div>

    <script>
        var firstName = sessionStorage.getItem("firstName");
        var lastName = sessionStorage.getItem("lastName");
        var email = sessionStorage.getItem("email");
        var phoneNumber = sessionStorage.getItem("phoneNumber");
        var dietaryRequirements = sessionStorage.getItem("dietaryRequirements");
        var selectedGuests = sessionStorage.getItem("selectedGuests");
        var selectedDate = sessionStorage.getItem("selectedDate");
        var selectedTime = sessionStorage.getItem("selectedTime");
        var selectedRestaurant = sessionStorage.getItem("selectedRestaurant");
        var selectedBanquet = sessionStorage.getItem("selectedBanquet");

        document.getElementById("firstName").textContent = firstName;
        document.getElementById("lastName").textContent = lastName;
        document.getElementById("email").textContent = email;
        document.getElementById("phoneNumber").textContent = phoneNumber;
        document.getElementById("dietaryRequirements").textContent = dietaryRequirements;
        document.getElementById("guestCount").textContent = selectedGuests;
        document.getElementById("dateTime").textContent = selectedDate;
        document.getElementById("bookingTime").textContent = selectedTime;
        document.getElementById("selectedRestaurant").textContent = selectedRestaurant;
        document.getElementById("selectedBanquet").textContent = selectedBanquet;
    </script>
</body>
</html>
