<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Booking Summary</title>
    <style>
    </style>
</head>
<body>
    <div class="container">
        <h1 class="display-header">Booking Summary</h1>

        <div class="summary-info">
            <h2>Guest Information</h2>
            <p><strong>First Name:</strong> <span id="firstName"></span></p>
            <p><strong>Last Name:</strong> <span id="lastName"></span></p>
            <p><strong>Email:</strong> <span id="email"></span></p>
            <p><strong>Phone Number:</strong> <span id="phoneNumber"></span></p>
            <p><strong>Dietary Requirements:</strong> <span id="dietaryRequirements"></span></p>
        </div>

        <form action="Booking" method="GET">
            <button type="submit">Confirm Booking</button>
        </form>
    </div>

    <script>
        var firstName = sessionStorage.getItem("firstName");
        var lastName = sessionStorage.getItem("lastName");
        var email = sessionStorage.getItem("email");
        var phoneNumber = sessionStorage.getItem("phoneNumber");
        var dietaryRequirements = sessionStorage.getItem("dietaryRequirements");

        document.getElementById("firstName").textContent = firstName;
        document.getElementById("lastName").textContent = lastName;
        document.getElementById("email").textContent = email;
        document.getElementById("phoneNumber").textContent = phoneNumber;
        document.getElementById("dietaryRequirements").textContent = dietaryRequirements;
    </script>
</body>
</html>
