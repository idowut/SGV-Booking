<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Booking Confirmation</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
        }

        .container {
            text-align: center;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        .display-header {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .big-check {
            font-size: 60px;
            color: #00a94e; 
        }

        h5 {
            font-weight: bold;
            margin-top: 20px;
            color: #333;
        }

        .booking-info {
            text-align: left;
            margin-top: 20px;
            border: 1px solid #ddd;
            padding: 10px;
            background-color: #f9f9f9;
        }

            .booking-info h2 {
                font-size: 20px;
                margin-bottom: 10px;
            }

        p {
            margin: 5px 0;
        }

        strong {
            font-weight: bold;
        }
    </style>
</head>
<body>

    <div class="container">
        <h1 class="display-header">Booking Confirmation</h1>

        <span class="big-check">&#10003;</span>

        <h5>Thank you for booking with us! A confirmation email has been sent to your email address. Please check your inbox for further details.</h5>

        <div class="booking-info">
            <h2>Booking Details</h2>
            <p><strong>First Name:</strong> <span id="firstName"></span></p>
            <p><strong>Last Name:</strong> <span id="lastName"></span></p>
            <p><strong>Selected Restaurant:</strong> <span id="selectedRestaurant"></span></p>
            <p><strong>Email:</strong> <span id="email"></span></p>
            <p><strong>Date:</strong> <span id="dateTime"></span></p>
            <p><strong>Time:</strong> <span id="bookingTime"></span></p>
            <p><strong>Number of Guests:</strong> <span id="guestCount"></span></p>
        </div>
    </div>

    <script>
        var firstName = sessionStorage.getItem("firstName");
        var lastName = sessionStorage.getItem("lastName");
        var email = sessionStorage.getItem("email");
        var selectedDate = sessionStorage.getItem("selectedDate");
        var selectedTime = sessionStorage.getItem("selectedTime");
        var selectedRestaurant = sessionStorage.getItem("selectedRestaurant");
        var selectedGuests = sessionStorage.getItem("selectedGuests");

        document.getElementById("firstName").textContent = firstName;
        document.getElementById("lastName").textContent = lastName;
        document.getElementById("email").textContent = email;
        document.getElementById("dateTime").textContent = selectedDate;
        document.getElementById("bookingTime").textContent = selectedTime;
        document.getElementById("selectedRestaurant").textContent = selectedRestaurant;
        document.getElementById("guestCount").textContent = selectedGuests;
    </script>

</body>
</html>
