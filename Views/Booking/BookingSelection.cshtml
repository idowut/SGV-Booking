        <script>
            document.getElementById("restaurantSelect").addEventListener("change", function () {
                var selectedRestaurant = this.value;
                var guestCount = document.getElementById("guest").value;
                var alaCarteOption = document.getElementById("alaCarteOption");
                var shareBanquetOption = document.getElementById("shareBanquetOption");
                var feastBanquetOption = document.getElementById("feastBanquetOption");
                var banquetOptions = document.getElementById("banquetOptions");
                var bookingTimeSelect = document.getElementById("bookingTimeSelect");
                var bookingTime = document.getElementById("bookingTime");

                // Clear existing options
                bookingTime.innerHTML = '';

                if (selectedRestaurant !== "Restaurant") {
                    // Show the booking time select and banquet options based on guest count
                    bookingTimeSelect.style.display = "block";
                    banquetOptions.style.display = "block";

                    // Add booking time options based on the selected restaurant
                    if (selectedRestaurant === "1") { // Bamboo Leaf
                        addOption(bookingTime, "12:00 PM", "12:00 PM (Lunch)");
                        // ... (Rest of the time options) ...
                    } else if (selectedRestaurant === "2") { // La Oeste
                        addOption(bookingTime, "10:00 AM", "10:00 AM (Brunch)");
                        // ... (Rest of the time options) ...
                    } else if (selectedRestaurant === "3") { // Mexikana
                        addOption(bookingTime, "5:00 PM", "5:00 PM (First Dinner)");
                        // ... (Rest of the time options) ...
                    }

                    // Display the appropriate banquet option text and enable/disable radio buttons
                    if (selectedRestaurant === "1") { // Bamboo Leaf
                        alaCarteOption.style.display = "block";
                        shareBanquetOption.style.display = "block";
                        feastBanquetOption.style.display = "block";
                        if (guestCount <= 3) {
                            // Disable Share Banquet and Feast Banquet options
                            shareBanquetOption.querySelector(".form-check-input").disabled = true;
                            feastBanquetOption.querySelector(".form-check-input").disabled = true;
                        } else {
                            // Enable Share Banquet and Feast Banquet options
                            shareBanquetOption.querySelector(".form-check-input").disabled = false;
                            feastBanquetOption.querySelector(".form-check-input").disabled = false;
                        }
                        // Update card text for share banquet
                        var shareBanquetText = "A shared banquet that includes: Satay Chicken, Steam prawn dumplings, S + P Squid, Roast Pork, Sticky pork and Asian green $55 per person";
                        var shareBanquetCardBody = shareBanquetOption.querySelector(".card-text");
                        shareBanquetCardBody.innerText = shareBanquetText;
                    } else if (selectedRestaurant === "2") { // La Oeste
                        alaCarteOption.style.display = "block";
                        shareBanquetOption.style.display = "none";
                        feastBanquetOption.style.display = "none";
                    } else if (selectedRestaurant === "3") { // Mexikana
                        alaCarteOption.style.display = "block";
                        shareBanquetOption.style.display = "block";
                        if (guestCount <= 3) {
                            // Disable Share Banquet and Feast Banquet options
                            shareBanquetOption.querySelector(".form-check-input").disabled = true;
                            // Feast Banquet is already disabled for Mexikana
                        } else {
                            // Enable Share Banquet option
                            shareBanquetOption.querySelector(".form-check-input").disabled = false;
                        }
                        // Update card text for share banquet
                        var shareBanquetText = "A shared banquet that includes: Papas Fritas, Korean Fried Chicken, Tacos, Smokey chicken, Taquitos dorados and Nachos $35 per person";
                        var shareBanquetCardBody = shareBanquetOption.querySelector(".card-text");
                        shareBanquetCardBody.innerText = shareBanquetText;
                    }
                } else {
                    // Hide the booking time select and banquet options
                    bookingTimeSelect.style.display = "none";
                    banquetOptions.style.display = "none";
                    alaCarteOption.style.display = "none";
                    shareBanquetOption.style.display = "none";
                    feastBanquetOption.style.display = "none";
                }

                // Function to add options to a dropdown
                function addOption(select, value, text) {
                    var option = document.createElement("option");
                    option.value = value;
                    option.text = text;
                    select.appendChild(option);
                }
            });

            // Initial state on page load
            document.getElementById("restaurantSelect").selectedIndex = 0;
            document.getElementById("restaurantSelect").dispatchEvent(new Event("change"));
        </script>

